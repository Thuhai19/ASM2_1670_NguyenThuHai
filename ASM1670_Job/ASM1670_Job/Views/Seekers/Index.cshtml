@model IEnumerable<ASM1670_Job.Models.Seeker>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn-create">Create New</a>
</p>
<div class="table-wrapper">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Age)</th>
                <th>@Html.DisplayNameFor(model => model.Gender)</th>
                <th>@Html.DisplayNameFor(model => model.Picture)</th>
                <th>@Html.DisplayNameFor(model => model.User_ID)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Age)</td>
                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                    <td><img class="seeker-picture" src="@Html.DisplayFor(modelItem => item.Picture)" alt="Seeker Picture"></td>
                    <td>@Html.DisplayFor(modelItem => item.User_ID.Email)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-details">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-wrapper {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        background-color: #f3f4f6;
        border-radius: 5px;
    }

        .table th,
        .table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #e0e6f0;
            color: #333;
        }

        .table td {
            background-color: #ffffff;
            color: #444;
        }

        .table tr:hover {
            background-color: #dbe5f1;
        }

    .btn-create,
    .btn-edit,
    .btn-details,
    .btn-delete {
        border: none;
        padding: 5px 10px;
        margin-right: 5px;
        cursor: pointer;
        border-radius: 3px;
        color: #fff;
    }

    .btn-create {
        background-color: #007bff;
    }

    .btn-edit {
        background-color: #007bff;
    }

    .btn-details {
        background-color: #007bff;
    }

    .btn-delete {
        background-color: #007bff;
    }

    .seeker-picture {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 50%;
    }
</style>
