@model ASM1670_Job.Models.Seeker

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Seeker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SeekerId" class="control-label"></label>
                <select asp-for="SeekerId" class ="form-control" asp-items="ViewBag.SeekerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureImage" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="PictureImage" class="custom-file-input" id="customFile" />
                    <label class="custom-file-label"> Choose file</label>
                </div>

                <span asp-validation-for="PictureImage" class="test-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="PictureImage" class="control-label"></label>
                <input asp-for="PictureImage" type="file" class="form-control" />
                <span asp-validation-for="PictureImage" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

